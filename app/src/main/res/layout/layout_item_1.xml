<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/text_round"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/avatar"
        android:gravity="center"
        android:text="A"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/text_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@id/text_round"
        android:layout_toRightOf="@id/text_round"
        android:text="Anh Dung"
        android:layout_toLeftOf="@id/text_time"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_main"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_fullname"
        android:layout_toRightOf="@id/text_round"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="không làm mà đòi ăn thì chỉ có ăn đầu buồi......"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/text_main2"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_main"
        android:layout_alignRight="@id/text_main"
        android:layout_toRightOf="@id/text_round"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="không làm mà đòi ăn thì chỉ có ăn đầu buồi...."
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignTop="@id/text_round"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@id/text_fullname"
        android:layout_alignParentTop="true"
        android:text="12:00 AM"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/image_favorite"
        android:layout_width="41dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="36dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_star_normal" />
</RelativeLayout>

